<Window x:Class="rSeccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoletosDesktop"
        mc:Ignorable="d"
        Title="rSeccion" Height="154" Width="437" ResizeMode="CanMinimize" Icon="/BoletosPF_Icon.png">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">


            <StackPanel Orientation="Vertical" Width="255">
                <Label>Nombre de la Seccion</Label>
                <TextBox Text="{Binding Seccion}" Margin="10,0,0,0"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Width="138" Margin="10,0,0,0">
                <Label>Precio</Label>
                <TextBox Text="{Binding Precio}" Margin="0,0,3,0"></TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,0,20" HorizontalAlignment="Center">
            <Button Margin="0,0,5,0" Width="100" Click="Button_Click">Cancelar</Button>
            <Button Margin="5,0,0,0" Width="100" Click="AgregarClick">Agregar</Button>
        </StackPanel>
    </Grid>
</Window>
